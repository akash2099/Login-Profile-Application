<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthenticateOptionsActivity">

    <TextView
        android:id="@+id/user_login_text"
        android:layout_width="409dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:text="User Login"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/gmail_login_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gmail_login_button"
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:text="GOOGLE"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/facebook_login_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_login_text"
        app:layout_constraintVertical_bias="0.437" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_login_button"
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:text="FACEBOOK"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/twitter_login_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gmail_login_button"
        app:layout_constraintVertical_bias="0.636" />

    <Button
        android:id="@+id/github_login_button"
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:text="GITHUB"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/twitter_login_button"
        app:layout_constraintVertical_bias="0.752" />

    <Button
        android:id="@+id/twitter_login_button"
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:text="TWITTER"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/github_login_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facebook_login_button"
        app:layout_constraintVertical_bias="0.901" />

</androidx.constraintlayout.widget.ConstraintLayout>